<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <h2>Editar Datos del Cliente</h2>
      
      <%= form_with model: @client, local: true do |f| %>
        <div class="mb-3">
          <label class="form-label fw-bold">Nombre Completo *</label>
          <%= f.text_field :full_name, class: 'form-control form-control-lg', placeholder: 'Juan P√©rez Garc√≠a' %>
        </div>

        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label">Tel√©fono</label>
            <%= f.telephone_field :phone, class: 'form-control' %>
          </div>
          <div class="col-md-6">
            <label class="form-label">Email</label>
            <%= f.email_field :email, class: 'form-control' %>
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label fw-bold">Estado Civil *</label>
          <%= f.select :civil_status, 
              CivilStatus.active.order(:sort_order).map { |s| [s.display_name, s.name] },
              { include_blank: 'Selecciona...' },
              class: 'form-select' %>
        </div>

        <div class="mb-3">
          <label class="form-label">Observaciones</label>
          <%= f.text_area :notes, class: 'form-control', rows: 3 %>
        </div>

        <div class="d-flex gap-2">
          <%= link_to 'Cancelar', @form, class: 'btn btn-secondary' %>
          <%= f.submit 'Guardar Cliente', class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
