<!-- AGREGAR AL INICIO DEL FORMULARIO -->
<% if @property.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <h6 class="alert-heading">
      <i class="bi bi-exclamation-circle"></i>
      <%= pluralize(@property.errors.count, "error") %> impidieron guardar esta propiedad:
    </h6>
    <ul class="mb-0">
      <% @property.errors.full_messages.each do |message| %>
        <li><strong><%= message %></strong></li>
      <% end %>
    </ul>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
<!-- RESTO DEL FORMULARIO AQUÍ -->

<%= form_with model: @property, local: true, html: { class: "needs-validation", novalidate: true } do |form| %>

  <div class="row">
    <!-- Información Básica -->
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Información Básica</h5>
        </div>
        <div class="card-body">
          <!-- Título -->
          <div class="mb-3">
            <%= form.label :title, "Título", class: "form-label" %>
            <%= form.text_field :title, class: "form-control", placeholder: "Ej: Casa moderna con jardín" %>
          </div>

          <!-- Descripción -->
          <div class="mb-3">
            <%= form.label :description, "Descripción", class: "form-label" %>
            <%= form.text_area :description, class: "form-control", rows: 4, placeholder: "Descripción detallada de la propiedad" %>
          </div>

          <!-- Precio -->
          <div class="mb-3">
            <%= form.label :price, "Precio", class: "form-label" %>
            <div class="input-group">
              <span class="input-group-text">$</span>
              <%= form.number_field :price, class: "form-control", step: 0.01, placeholder: "0.00" %>
            </div>
          </div>
        </div>
      </div>
    </div>



  <!-- Clasificación -->
  <div class="col-md-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Clasificación</h5>
      </div>
      <div class="card-body">
        <!-- Solo Tipo de Propiedad -->
        <!-- Dentro de la card de Clasificación -->
        <div class="mb-3">
          <%= form.label :co_ownership_type_id, "Tipo de Copropiedad", class: "form-label" %>
          <%= form.collection_select :co_ownership_type_id, 
              CoOwnershipType.active.order(:sort_order),
              :id, :display_name,
              { prompt: 'Propietario único (sin copropiedad)' },
              { class: "form-select" } %>
          <div class="form-text">Selecciona si la propiedad tiene múltiples propietarios</div>
        </div>

        <div class="mb-3" id="co-ownership-details" style="display: none;">
          <%= form.label :co_owners_details, "Detalles de Copropietarios", class: "form-label" %>
          <%= form.text_area :co_owners_details, class: "form-control", rows: 3,
              placeholder: "Ej: Juan Pérez (50%), María López (50%)" %>
          <div class="form-text">Especifica nombres y porcentajes de propiedad</div>
        </div>

        <script>
          document.addEventListener('DOMContentLoaded', function() {
            const coOwnershipSelect = document.getElementById('property_co_ownership_type_id');
            const detailsDiv = document.getElementById('co-ownership-details');
            
            function toggleDetails() {
              if (coOwnershipSelect.value && coOwnershipSelect.value !== '') {
                detailsDiv.style.display = 'block';
              } else {
                detailsDiv.style.display = 'none';
              }
            }
            
            coOwnershipSelect.addEventListener('change', toggleDetails);
            toggleDetails(); // Ejecutar al cargar
          });
        </script>

        <div class="mb-3">
          <%= form.label :property_type_id, "Tipo de Propiedad", class: "form-label" %>
          <%= form.collection_select :property_type_id, 
              PropertyType.active.order(:sort_order),
              :id, :display_name,
              { prompt: 'Selecciona tipo' },
              { class: "form-select" } %>
        </div>
        
        <div class="alert alert-info mt-3">
          <small>
            <i class="bi bi-info-circle"></i>
            <strong>Importante:</strong> Después de crear la propiedad, podrás agregar las operaciones de negocio (venta, alquiler, etc.) con sus respectivos precios y condiciones.
          </small>
        </div>
      </div>
    </div>
  </div>

  <!-- Ubicación COMPLETA -->
  <div class="card mt-4">
    <div class="card-header">
      <h5 class="mb-0">Ubicación</h5>
    </div>
    <div class="card-body">
      <!-- País -->
      <div class="row mb-3">
        <div class="col-md-12">
          <%= form.label :country, "País", class: "form-label" %>
          <%= form.text_field :country, class: "form-control", placeholder: "México" %>
        </div>
      </div>

      <!-- Calle y Números -->
      <div class="row">
        <div class="col-md-5">
          <div class="mb-3">
            <%= form.label :street, "Calle", class: "form-label" %>
            <%= form.text_field :street, class: "form-control", placeholder: "Av. Paseo de la Reforma" %>
          </div>
        </div>

        <div class="col-md-2">
          <div class="mb-3">
            <%= form.label :exterior_number, "No. Exterior", class: "form-label" %>
            <%= form.text_field :exterior_number, class: "form-control", placeholder: "505" %>
          </div>
        </div>

        <div class="col-md-2">
          <div class="mb-3">
            <%= form.label :interior_number, "No. Interior", class: "form-label" %>
            <%= form.text_field :interior_number, class: "form-control", placeholder: "Apto" %>
          </div>
        </div>

        <div class="col-md-3">
          <div class="mb-3">
            <%= form.label :postal_code, "CP", class: "form-label" %>
            <%= form.text_field :postal_code, class: "form-control", placeholder: "00000" %>
          </div>
        </div>
      </div>

      <!-- Zona Geográfica -->
      <div class="row">
        <div class="col-md-4">
          <div class="mb-3">
            <%= form.label :neighborhood, "Colonia/Barrio", class: "form-label" %>
            <%= form.text_field :neighborhood, class: "form-control", placeholder: "Juárez" %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="mb-3">
            <%= form.label :municipality, "Municipio", class: "form-label" %>
            <%= form.text_field :municipality, class: "form-control", placeholder: "Cuauhtémoc" %>
          </div>
        </div>

        <div class="col-md-4">
          <div class="mb-3">
            <%= form.label :state, "Estado", class: "form-label" %>
            <%= form.text_field :state, class: "form-control", placeholder: "CDMX" %>
          </div>
        </div>
      </div>

      <!-- Ciudad (Redundante pero en BD) -->
      <div class="row">
        <div class="col-md-12">
          <div class="mb-3">
            <%= form.label :city, "Ciudad", class: "form-label" %>
            <%= form.text_field :city, class: "form-control", placeholder: "Ciudad" %>
          </div>
        </div>
      </div>
    </div>
  </div>


  <!-- Características -->
  <div class="card mt-4">
    <div class="card-header">
      <h5 class="mb-0">Características</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <!-- Recámaras -->
        <div class="col-md-2">
          <div class="mb-3">
            <%= form.label :bedrooms, "Recámaras", class: "form-label" %>
            <%= form.number_field :bedrooms, class: "form-control", min: 0, placeholder: "0" %>
          </div>
        </div>

        <!-- Baños -->
        <div class="col-md-2">
          <div class="mb-3">
            <%= form.label :bathrooms, "Baños", class: "form-label" %>
            <%= form.number_field :bathrooms, class: "form-control", min: 0, step: 0.5, placeholder: "0" %>
          </div>
        </div>

        <!-- Área Construida -->
        <div class="col-md-3">
          <div class="mb-3">
            <%= form.label :built_area_m2, "Área Construida (m²)", class: "form-label" %>
            <%= form.number_field :built_area_m2, class: "form-control", step: 0.01, placeholder: "0.00" %>
          </div>
        </div>

        <!-- Área del Terreno -->
        <div class="col-md-3">
          <div class="mb-3">
            <%= form.label :lot_area_m2, "Área del Terreno (m²)", class: "form-label" %>
            <%= form.number_field :lot_area_m2, class: "form-control", step: 0.01, placeholder: "0.00" %>
          </div>
        </div>

        <!-- Año de Construcción -->
        <div class="col-md-2">
          <div class="mb-3">
            <%= form.label :year_built, "Año", class: "form-label" %>
            <%= form.number_field :year_built, class: "form-control", min: 1900, max: Date.current.year + 5, placeholder: Date.current.year %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Campos Adicionales (si existen en tu migración) -->
   <!-- Información Adicional -->
  <div class="card mt-4">
    <div class="card-header">
      <h5 class="mb-0">Información Adicional</h5>
    </div>
    <div class="card-body">
      <div class="row">
        <!-- Uso de Suelo -->
        <div class="col-md-6">
          <div class="mb-3">
            <%= form.label :land_use, "Uso de Suelo", class: "form-label" %>
            <%= form.select :land_use,
                [
                  ['Habitacional', 'habitacional'],
                  ['Comercial', 'comercial'],
                  ['Mixto', 'mixto'],
                  ['Industrial', 'industrial'],
                  ['Otros', 'otros']
                ],
                { prompt: 'Selecciona uso de suelo' },
                { class: "form-select" } %>
          </div>
        </div>

        <!-- Ampliaciones -->
        <div class="col-md-6">
          <div class="form-check mt-4">
            <%= form.check_box :has_extensions, class: "form-check-input" %>
            <%= form.label :has_extensions, "Tiene ampliaciones", class: "form-check-label" %>
          </div>
        </div>
      </div>

      <!-- Facilidades Cercanas -->
      <div class="row mt-3">
        <div class="col-md-12">
          <div class="mb-3">
            <%= form.label :co_owners_details, "Facilidades Cercanas", class: "form-label" %>
            <%= form.text_area :co_owners_details, 
                class: "form-control", 
                rows: 4,
                placeholder: "Iglesia a 0.5 km, Escuela a 1 km, Centro Comercial a 2 km, Hospital a 3 km..." %>
            <small class="form-text text-muted">Describe iglesias, escuelas, comercios, hospitales, parques, etc.</small>
          </div>
        </div>
      </div>
    </div>
  </div>
 


  <% if @property.respond_to?(:parking_spaces) %>
    <div class="card mt-4">
      <div class="card-header">
        <h5 class="mb-0">Características Adicionales</h5>
      </div>
      <div class="card-body">
        <div class="row">
          <!-- Estacionamientos -->
          <div class="col-md-2">
            <div class="mb-3">
              <%= form.label :parking_spaces, "Estacionamientos", class: "form-label" %>
              <%= form.number_field :parking_spaces, class: "form-control", min: 0, placeholder: "0" %>
            </div>
          </div>

          <!-- Checkboxes para amenidades -->
          <div class="col-md-10">
            <div class="row">
              <div class="col-md-3">
                <div class="form-check">
                  <%= form.check_box :furnished, class: "form-check-input" %>
                  <%= form.label :furnished, "Amueblado", class: "form-check-label" %>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-check">
                  <%= form.check_box :pets_allowed, class: "form-check-input" %>
                  <%= form.label :pets_allowed, "Mascotas", class: "form-check-label" %>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-check">
                  <%= form.check_box :elevator, class: "form-check-input" %>
                  <%= form.label :elevator, "Elevador", class: "form-check-label" %>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-check">
                  <%= form.check_box :balcony, class: "form-check-input" %>
                  <%= form.label :balcony, "Balcón", class: "form-check-label" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Botones -->
  <div class="mt-4">
    <%= form.submit @property.persisted? ? "Actualizar Propiedad" : "Crear Propiedad", 
        class: "btn btn-primary" %>
    <%= link_to "Cancelar", properties_path, class: "btn btn-secondary ms-2" %>
  </div>
<% end %>
