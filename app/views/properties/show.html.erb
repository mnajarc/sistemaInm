<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><%= @property.title %></h1>
        <div>
          <%= link_to 'Editar', edit_property_path(@property), class: 'btn btn-primary' %>
          <%= link_to 'Lista', properties_path, class: 'btn btn-secondary' %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-8">
          <div class="card mb-4">
            <div class="card-header">
              <h5>Descripción</h5>
            </div>
            <div class="card-body">
              <p><%= simple_format(@property.description) %></p>
            </div>
          </div>

          <div class="card">
            <div class="card-header">
              <h5>Ubicación</h5>
            </div>
            <div class="card-body">
              <address>
                <%= simple_format(@property.address) %><br>
                <%= @property.city %>, <%= @property.state %> <%= @property.postal_code %>
              </address>
            </div>
          </div>
        </div>



<!-- Reemplaza la sección de información de la propiedad existente -->
<div class="card">
  <div class="card-header">
    <h5 class="mb-0">Información de la Propiedad</h5>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <dl class="row">
          <dt class="col-sm-5">Tipo:</dt>
          <dd class="col-sm-7">
            <span class="badge bg-primary">
              <%= @property.property_type&.display_name || 'Sin especificar' %>
            </span>
          </dd>
          
          <dt class="col-sm-5">Precio Base:</dt>
          <dd class="col-sm-7">
            <strong class="text-success">
              $<%= number_with_delimiter(@property.price) %>
            </strong>
            <small class="text-muted">(referencia)</small>
          </dd>
        </dl>
      </div>
      
      <div class="col-md-6">
        <dl class="row">
          <dt class="col-sm-5">Agente:</dt>
          <dd class="col-sm-7"><%= @property.user.email %></dd>
          
          <dt class="col-sm-5">Estado:</dt>
          <dd class="col-sm-7">
            <span class="badge bg-secondary">Registrada</span>
          </dd>
        </dl>
      </div>
    </div>
  </div>
</div>

<!-- Nueva sección para operaciones disponibles -->
<div class="card mt-4">
  <div class="card-header">
    <h5 class="mb-0">Operaciones Disponibles</h5>
  </div>
  <div class="card-body">
    <% if @property.business_transactions.any? %>
      <% @property.business_transactions.each do |transaction| %>
        <div class="alert alert-<%= transaction.business_status.color %> d-flex justify-content-between">
          <div>
            <strong><%= transaction.operation_type.display_name %></strong>
            <br>
            <small>Precio: $<%= number_with_delimiter(transaction.price) %></small>
            <br>
            <small>Estado: <%= transaction.business_status.display_name %></small>
          </div>
          <div>
            <span class="badge bg-<%= transaction.business_status.color %>">
              <%= transaction.business_status.display_name %>
            </span>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i>
        <strong>Sin operaciones configuradas</strong>
        <p class="mb-0">Esta propiedad aún no tiene operaciones de venta o renta configuradas.</p>
        <% if policy(@property).update? %>
          <hr>
          <%= link_to "Configurar Operaciones", "#", class: "btn btn-primary btn-sm" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>




