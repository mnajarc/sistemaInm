<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
      <i class="bi bi-briefcase"></i>
      Mis Transacciones
    </h2>
    <%= link_to client_root_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left"></i> Volver al Dashboard
    <% end %>
  </div>

  <% if @my_transactions&.any? %>
    <div class="row">
      <% @my_transactions.each do |transaction| %>
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">
                <%= transaction.property.title %>
              </h5>
              <p class="card-text">
                <strong>Operación:</strong> <%= transaction.operation_type.display_name %><br>
                <strong>Estado:</strong> 
                <span class="badge bg-<%= transaction.business_status.color %>">
                  <%= transaction.business_status.display_name %>
                </span><br>
                <strong>Precio:</strong> $<%= number_with_delimiter(transaction.price) %>
              </p>
              <%= link_to "Ver Detalles", client_transaction_path(transaction), class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
      <h4 class="mt-3 text-muted">No hay transacciones</h4>
      <p class="text-muted">Contacta a nuestros agentes para iniciar una transacción.</p>
    </div>
  <% end %>
</div>
