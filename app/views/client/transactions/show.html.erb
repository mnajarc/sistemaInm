<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
      <i class="bi bi-eye"></i>
      Transacción #<%= @transaction.id %>
    </h2>
    <%= link_to client_transactions_path, class: "btn btn-outline-secondary" do %>
      <i class="bi bi-arrow-left"></i> Volver
    <% end %>
  </div>

  <div class="card">
    <div class="card-body">
      <h5><%= @transaction.property.title %></h5>
      <p><strong>Dirección:</strong> <%= @transaction.property.address %></p>
      <p><strong>Operación:</strong> <%= @transaction.operation_type.display_name %></p>
      <p><strong>Estado:</strong> 
        <span class="badge bg-<%= @transaction.business_status.color %>">
          <%= @transaction.business_status.display_name %>
        </span>
      </p>
      <p><strong>Precio:</strong> $<%= number_with_delimiter(@transaction.price) %></p>
      <p><strong>Agente Actual:</strong> <%= @transaction.current_agent.email %></p>
    </div>
  </div>
</div>
