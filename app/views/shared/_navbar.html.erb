      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarNav">
      <!-- Menús principales dinámicos -->
      <%= render_menu_tree(MenuItem.main_navigation(current_user), current_user) if user_signed_in? %>
      
