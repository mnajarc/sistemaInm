<%= form_with(model: [:admin, @rule], local: true) do |f| %>
    <% if @rule.errors.any? %>
      <div class="alert alert-danger">
        <h5><%= pluralize(@rule.errors.count, "error") %> impidieron guardar:</h5>
        <ul>
          <% @rule.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="mb-3">
      <%= f.label :document_type_id, 'Documento', class: 'form-label' %>
      <%= f.collection_select :document_type_id,
                              DocumentType.all,
                              :id, :name,
                              prompt: 'Selecciona documento',
                              class: 'form-select' %>
    </div>
  
    <div class="row mb-3">
      <div class="col-md-4">
        <%= f.label :validity_period_months, 'Meses de Validez', class: 'form-label' %>
        <%= f.number_field :validity_period_months, class: 'form-control' %>
      </div>
      <div class="col-md-4">
        <%= f.label :valid_from, 'Válido desde', class: 'form-label' %>
        <%= f.date_field :valid_from, class: 'form-control' %>
      </div>
      <div class="col-md-4">
        <%= f.label :valid_until, 'Válido hasta', class: 'form-label' %>
        <%= f.date_field :valid_until, class: 'form-control' %>
      </div>
    </div>
  
    <div class="form-check mb-3">
      <%= f.check_box :is_active, class: 'form-check-input' %>
      <%= f.label :is_active, 'Activo', class: 'form-check-label' %>
    </div>
  
    <div class="d-flex">
      <%= f.submit class: 'btn btn-success me-2' %>
      <%= link_to 'Cancelar', admin_document_validity_rules_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
  