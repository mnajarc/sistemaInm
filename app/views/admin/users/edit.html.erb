<% content_for :title, "Editar Usuario" %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h4>Editar Usuario: <%= @user.email %></h4>
      </div>
      <div class="card-body">
        <%= form_with model: [:admin, @user], local: true do |form| %>
          <% if @user.errors.any? %>
            <div class="alert alert-danger">
              <ul class="mb-0">
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :role, "Rol del Usuario", class: "form-label" %>
            <%= form.select :role, 
                           options_for_select([
                             ['Administrador', 'admin'],
                             ['Agente', 'agent'],
                             ['Solo Consulta', 'client']
                           ], @user.role), 
                           {}, 
                           { class: "form-select" } %>
            <div class="form-text">
              <strong>Administrador:</strong> Acceso completo al sistema<br>
              <strong>Agente:</strong> Puede crear y gestionar propiedades<br>
              <strong>Consulta:</strong> Solo puede ver propiedades
            </div>
          </div>

          <div class="mb-3 form-check">
            <%= form.check_box :active, class: "form-check-input" %>
            <%= form.label :active, "Usuario activo", class: "form-check-label" %>
          </div>

          <div class="d-flex justify-content-between">
            <%= link_to "Cancelar", admin_users_path, class: "btn btn-secondary" %>
            <%= form.submit "Actualizar Usuario", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
