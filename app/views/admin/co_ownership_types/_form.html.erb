<%= form_with(model: [:admin, @type], local: true) do |form| %>
  <% if @type.errors.any? %>
    <div class="alert alert-danger">
      <h4>Errores:</h4>
      <ul>
        <% @type.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :display_name %>
    <%= form.text_field :display_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 3, class: "form-control" %>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.label :active %><br>
      <%= form.check_box :active %>
    </div>
    <div class="form-group col-md-6">
      <%= form.label :sort_order %>
      <%= form.number_field :sort_order, class: "form-control", min: 0 %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-primary" %>
    <%= link_to "Cancelar", admin_co_ownership_types_path, class: "btn btn-secondary ml-2" %>
  </div>
<% end %>
