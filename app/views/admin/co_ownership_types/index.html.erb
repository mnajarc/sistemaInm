
<h1>Tipos de Copropiedad</h1>

<%= link_to 'Nuevo Tipo de Copropiedad', new_admin_co_ownership_type_path, class: "btn btn-success mb-3" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Display Name</th>
      <th>Active</th>
      <th>Sort Order</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td><%= type.display_name %></td>
        <td><%= type.active ? "Sí" : "No" %></td>
        <td><%= type.sort_order %></td>
        <td>
          <%= link_to 'Ver', admin_co_ownership_type_path(type), class: "btn btn-sm btn-outline-primary" %>
          <%= link_to 'Editar', edit_admin_co_ownership_type_path(type), class: "btn btn-sm btn-outline-secondary ml-1" %>
          <%= link_to 'Eliminar', admin_co_ownership_type_path(type), method: :delete, data: { confirm: '¿Seguro?' }, class: "btn btn-sm btn-outline-danger ml-1" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
