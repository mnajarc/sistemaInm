<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>
    <i class="bi bi-house"></i>
    Tipos de Propiedad
  </h2>
  <% if policy(PropertyType).create? %>
    <%= link_to new_admin_property_type_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-circle"></i>
      Nuevo Tipo
    <% end %>
  <% end %>
</div>

<div class="card shadow">
  <div class="card-header bg-primary text-white">
    <h5 class="mb-0">
      <i class="bi bi-list"></i>
      Listado de Tipos de Propiedad
    </h5>
  </div>
  
  <div class="table-responsive">
    <table class="table table-striped table-hover mb-0">
      <thead class="table-dark">
        <tr>
          <th width="80">Orden</th>
          <th width="150">Clave</th>
          <th>Nombre Visible</th>
          <th>Descripción</th>
          <th width="100" class="text-center">Estado</th>
          <th width="120" class="text-center">Propiedades</th>
          <th width="200" class="text-center">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% if @property_types.any? %>
          <% @property_types.each do |property_type| %>
            <tr>
              <td class="text-center">
                <span class="badge bg-secondary">
                  <%= property_type.sort_order %>
                </span>
              </td>
              <td>
                <code class="text-primary"><%= property_type.name %></code>
              </td>
              <td>
                <%= link_to admin_property_type_path(property_type), class: "text-decoration-none" do %>
                    <strong><%= property_type.display_name %></strong>
                <% end %>
              </td>

              <td>
                <span class="text-muted">
                  <%= truncate(property_type.description, length: 50) %>
                </span>
              </td>
              <td class="text-center">
                <span class="badge bg-<%= property_type.active? ? 'success' : 'danger' %>">
                  <i class="bi bi-<%= property_type.active? ? 'check-circle' : 'x-circle' %>"></i>
                  <%= property_type.active? ? 'Activo' : 'Inactivo' %>
                </span>
              </td>
              <td class="text-center">
                <% properties_count = property_type.properties.count %>
                <% if properties_count > 0 %>
                  <span class="badge bg-info">
                    <i class="bi bi-houses"></i>
                    <%= properties_count %>
                  </span>
                <% else %>
                  <span class="text-muted">0</span>
                <% end %>
              </td>
                <td class="text-center">
            <div class="btn-group" role="group">
                <!-- View/Show button -->
                <%= link_to admin_property_type_path(property_type), 
                    class: "btn btn-sm btn-outline-info",
                    title: "Ver detalles" do %>
                <i class="bi bi-eye"></i>
                <% end %>
                
                <% if policy(property_type).edit? %>
                <%= link_to edit_admin_property_type_path(property_type), 
                    class: "btn btn-sm btn-outline-primary",
                    title: "Editar" do %>
                    <i class="bi bi-pencil"></i>
                <% end %>
                <% end %>
                
                <% if policy(property_type).destroy? %>
                <% if properties_count == 0 %>
                    <%= link_to admin_property_type_path(property_type), 
                        method: :delete,
                        data: { 
                        confirm: "¿Estás seguro de eliminar '#{property_type.display_name}'?\n\nEsta acción no se puede deshacer." 
                        },
                        class: "btn btn-sm btn-outline-danger",
                        title: "Eliminar" do %>
                    <i class="bi bi-trash"></i>
                    <% end %>
                <% else %>
                    <button class="btn btn-sm btn-outline-secondary" 
                            disabled 
                            title="No se puede eliminar: tiene propiedades asociadas">
                    <i class="bi bi-lock"></i>
                    </button>
                <% end %>
                <% end %>
            </div>
            </td>

            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="7" class="text-center py-4">
              <div class="text-muted">
                <i class="bi bi-inbox" style="font-size: 2rem;"></i>
                <h5 class="mt-2">No hay tipos de propiedad registrados</h5>
                <p>Comienza creando tu primer tipo de propiedad.</p>
                <% if policy(PropertyType).create? %>
                  <%= link_to "Crear Primer Tipo", new_admin_property_type_path, 
                      class: "btn btn-primary" %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <% if @property_types.any? %>
    <div class="card-footer text-muted">
      <i class="bi bi-info-circle"></i>
      <strong><%= @property_types.count %></strong> tipo(s) de propiedad registrado(s)
    </div>
  <% end %>
</div>

<!-- Información adicional -->
<div class="mt-4">
  <div class="alert alert-info">
    <h6 class="alert-heading">
      <i class="bi bi-lightbulb"></i>
      Información sobre Tipos de Propiedad
    </h6>
    <p class="mb-2">
      • Los tipos de propiedad definen la categoría de cada inmueble (casa, departamento, local, etc.)
    </p>
    <p class="mb-2">
      • El <strong>orden</strong> determina cómo aparecen en los formularios y listados
    </p>
    <p class="mb-0">
      • No se pueden eliminar tipos que tengan propiedades asociadas
    </p>
  </div>
</div>
