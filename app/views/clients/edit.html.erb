<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
          <i class="bi bi-person-fill"></i>
          Editar Cliente
        </h2>
        <% if @form.present? %>
          <%= link_to "Volver al formulario", @form, class: 'btn btn-secondary' %>
        <% else %>
          <%= link_to "Cancelar", clients_path, class: 'btn btn-secondary' %>
        <% end %>
      </div>

      <%= render 'form', client: @client, form: @form %>
    </div>
  </div>
</div>
