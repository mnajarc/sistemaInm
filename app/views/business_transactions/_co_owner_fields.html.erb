<div class="co-owner-form border rounded p-3 mb-3 bg-light">
  <div class="row">
    <div class="col-md-3">
      <%= f.label :client_id, "Cliente", class: "form-label" %>
      <%= f.collection_select :client_id, Client.active.order(:name), :id, :name, {prompt: "Cliente existente"}, {class: "form-select"} %>
    </div>
    <div class="col-md-3">
      <%= f.label :person_name, "Nombre (si no hay cliente)", class: "form-label" %>
      <%= f.text_field :person_name, class: "form-control", placeholder: "Ej: Juan Heredero" %>
    </div>
    <div class="col-md-2">
      <%= f.label :percentage, "Porcentaje", class: "form-label" %>
      <%= f.number_field :percentage, class: "form-control", step: 0.01, min: 0, max: 100, placeholder: "0.00" %>
    </div>
    <div class="col-md-2">
      <%= f.label :role, "Rol", class: "form-label" %>
      <%= f.select :role, CoOwnershipRole.active.pluck(:display_name, :name), {prompt: 'Seleccionar rol'}, {class: "form-select"} %>
    </div>
    <div class="col-md-2 d-flex flex-column align-items-end">
      <%= f.hidden_field :_destroy %>
      <button type="button" class="btn btn-sm btn-outline-danger remove-co-owner" data-action="co-owners#remove" title="Eliminar">
        <i class="fa fa-trash"></i>
      </button>
    </div>
  </div>
  <div class="row mt-2">
    <div class="col-md-2">
      <div class="form-check">
        <%= f.check_box :deceased, class: "form-check-input" %>
        <%= f.label :deceased, "Finado", class: "form-check-label" %>
      </div>
    </div>
    <div class="col-md-10">
      <%= f.label :inheritance_case_notes, "Notas de herencia/juicio/representaciÃ³n:", class: "form-label" %>
      <%= f.text_area :inheritance_case_notes, class: "form-control", rows: 2, placeholder: "Ejemplo: en juicio, representante legal, etc." %>
    </div>
  </div>
</div>
