<!-- app/views/business_transactions/new.html.erb -->
<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h2 class="mb-1">Nueva Transacción de Negocio</h2>
          <p class="text-muted mb-0">Complete todos los datos para crear la transacción</p>
        </div>
        <%= link_to "← Volver", business_transactions_path, class: "btn btn-outline-secondary" %>
      </div>

      <%= form_with model: @transaction, local: true, 
                   class: "needs-validation", 
                   novalidate: true, 
                   data: { controller: "co-owners" } do |form| %>
        
        <!-- SECCIÓN 1: DATOS BÁSICOS -->
        <div class="card mb-4">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="fas fa-clipboard-list me-2"></i>1. Datos de la Transacción</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-4">
                <%= form.label :operation_type_id, "Tipo de Operación", class: "form-label required" %>
                <%= form.select :operation_type_id, 
                               options_from_collection_for_select(@operation_types, :id, :display_name), 
                               { prompt: "Seleccione tipo de operación..." }, 
                               { class: "form-select", required: true } %>
              </div>
              <div class="col-md-4">
                <%= form.label :start_date, "Fecha de Inicio", class: "form-label required" %>
                <%= form.date_field :start_date, 
                                   class: "form-control", 
                                   value: Date.current, 
                                   required: true %>
              </div>
              <div class="col-md-4">
                <%= form.label :business_status_id, "Estado", class: "form-label" %>
                <%= form.select :business_status_id, 
                               options_from_collection_for_select(@business_statuses, :id, :display_name, 
                                                                 @business_statuses.find_by(name: 'available')&.id), 
                               {}, { class: "form-select" } %>
              </div>
            </div>
          </div>
        </div>

        <!-- SECCIÓN 2: PROPIEDAD -->
        <div class="card mb-4">
          <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="fas fa-home me-2"></i>2. Propiedad</h5>
          </div>
          <div class="card-body">
            <!-- Toggle de propiedad -->
            <div class="mb-4">
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="property_option" 
                       value="existing" id="existing_property" checked 
                       data-action="change->co-owners#togglePropertySection">
                <label class="form-check-label" for="existing_property">
                  <i class="fas fa-search me-1"></i> Seleccionar propiedad existente
                </label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="property_option" 
                       value="new" id="new_property"
                       data-action="change->co-owners#togglePropertySection">
                <label class="form-check-label" for="new_property">
                  <i class="fas fa-plus me-1"></i> Crear nueva propiedad
                </label>
              </div>
            </div>

            <!-- Propiedad existente -->
            <div id="existing-property-section">
              <%= form.label :property_id, "Seleccionar Propiedad", class: "form-label required" %>
              <div class="input-group">
                <%= form.select :property_id, 
                               options_from_collection_for_select(@properties, :id, :address), 
                               { prompt: "Buscar por dirección..." },
                               { class: "form-select" } %>
                <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" 
                        data-bs-target="#newPropertyModal" title="Crear nueva propiedad">
                  <i class="bi bi-plus-circle"></i> Nueva
                </button>
              </div>
            </div>

            <!-- Nueva propiedad -->
            <div id="new-property-section" style="display: none;">
              <%= form.fields_for :property, @transaction.build_property do |property_form| %>
                <div class="row">
                  <div class="col-md-8">
                    <%= property_form.label :address, "Dirección", class: "form-label required" %>
                    <%= property_form.text_area :address, 
                                               placeholder: "Calle, número, colonia, ciudad, CP", 
                                               class: "form-control", rows: 2, required: true %>
                  </div>
                  <div class="col-md-4">
                    <%= property_form.label :property_type_id, "Tipo", class: "form-label required" %>
                    <%= property_form.select :property_type_id, 
                                           options_from_collection_for_select(@property_types, :id, :display_name),
                                           { prompt: "Seleccione tipo..." },
                                           { class: "form-select", required: true } %>
                  </div>
                </div>
                <div class="row mt-3">
                  <div class="col-md-3">
                    <%= property_form.label :built_area_m2, "Área Construida (m²)", class: "form-label" %>
                    <%= property_form.number_field :built_area_m2, 
                                                 class: "form-control", step: 0.01, min: 0 %>
                  </div>
                  <div class="col-md-3">
                    <%= property_form.label :lot_area_m2, "Área Terreno (m²)", class: "form-label" %>
                    <%= property_form.number_field :lot_area_m2, 
                                                 class: "form-control", step: 0.01, min: 0 %>
                  </div>
                  <div class="col-md-3">
                    <%= property_form.label :bedrooms, "Recámaras", class: "form-label" %>
                    <%= property_form.number_field :bedrooms, class: "form-control", min: 0 %>
                  </div>
                  <div class="col-md-3">
                    <%= property_form.label :bathrooms, "Baños", class: "form-label" %>
                    <%= property_form.number_field :bathrooms, class: "form-control", min: 0 %>
                  </div>
                </div>
              <% end %>
            </div>


          </div>
        </div>

        <!-- SECCIÓN 2.5: CLIENTES -->
        <div class="card mb-4">
          <div class="card-header bg-secondary text-white">
            <h5 class="mb-0"><i class="fas fa-users me-2"></i>2.5. Clientes de la Transacción</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <!-- Cliente Ofertante -->
              <div class="col-md-6">
                <%= form.label :offering_client_id, "Cliente Ofertante (Vendedor)", class: "form-label required" %>
                <div class="input-group">
                  <%= form.select :offering_client_id, 
                                 options_from_collection_for_select(@clients || [], :id, :display_name), 
                                 { prompt: "Seleccione cliente..." },
                                 { class: "form-select", required: true } %>
                  <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" 
                          data-bs-target="#newClientModal" title="Crear nuevo cliente">
                    <i class="bi bi-plus-circle"></i> Nuevo
                  </button>
                </div>
                <small class="text-muted">Cliente que ofrece/vende la propiedad</small>
              </div>

              <!-- Cliente Adquiriente -->
              <div class="col-md-6">
                <%= form.label :acquiring_client_id, "Cliente Adquiriente (Comprador)", class: "form-label" %>
                <div class="input-group">
                  <%= form.select :acquiring_client_id, 
                                 options_from_collection_for_select(@clients || [], :id, :display_name), 
                                 { prompt: "Seleccione cliente (opcional)..." },
                                 { class: "form-select" } %>
                  <button type="button" class="btn btn-outline-primary" data-bs-toggle="modal" 
                          data-bs-target="#newClientModal" title="Crear nuevo cliente">
                    <i class="bi bi-plus-circle"></i> Nuevo
                  </button>
                </div>
                <small class="text-muted">Cliente que compra/adquiere (dejar vacío si aún no existe)</small>
              </div>
            </div>
          </div>
        </div>

        <!-- SECCIÓN 3: COPROPIEDAD -->
        <div class="card mb-4">
          <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="fas fa-users me-2"></i>3. Propietarios/Copropietarios</h5>
          </div>
          <div class="card-body">
            <!-- Tipo de copropiedad -->
            <div class="row mb-3">
              <div class="col-md-6">
                <%= form.label :co_ownership_type_id, "Tipo de Copropiedad", class: "form-label required" %>
                <%= form.select :co_ownership_type_id, 
                               options_from_collection_for_select(@co_ownership_types, :id, :display_name),
                               { prompt: "Seleccione tipo de copropiedad..." },
                               { class: "form-select", 
                                 required: true,
                                 data: { action: "change->co-owners#updateCoOwnershipType" } } %>
              </div>
              <div class="col-md-6 d-flex align-items-end">
                <button type="button" 
                        class="btn btn-outline-success me-2" 
                        data-action="click->co-owners#autoSetup">
                  <i class="fas fa-magic me-1"></i> Setup Automático
                </button>
                <button type="button" 
                        class="btn btn-outline-primary" 
                        data-action="click->co-owners#addCoOwner">
                  <i class="fas fa-plus me-1"></i> Agregar
                </button>
              </div>
            </div>

            <!-- Lista de copropietarios -->
            <div id="co-owners-section" data-co-owners-target="container">
              <%= form.fields_for :co_owners do |co_owner_form| %>
                <%= render 'co_owner_fields', f: co_owner_form %>
              <% end %>
            </div>

            <!-- Info de porcentajes -->
            <div class="mt-3 p-3 bg-light rounded">
              <div class="row text-center">
                <div class="col-md-4">
                  <small class="text-muted">Total Asignado:</small>
                  <div class="fw-bold" data-co-owners-target="totalPercentage">0%</div>
                </div>
                <div class="col-md-4">
                  <small class="text-muted">Disponible:</small>
                  <div class="fw-bold" data-co-owners-target="remainingPercentage">100%</div>
                </div>
                <div class="col-md-4">
                  <small class="text-muted">Copropietarios:</small>
                  <div class="fw-bold" data-co-owners-target="totalCount">0</div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- SECCIÓN 4: DETALLES FINANCIEROS -->
        <div class="card mb-4">
          <div class="card-header bg-info text-white">
            <h5 class="mb-0"><i class="fas fa-dollar-sign me-2"></i>4. Detalles Financieros</h5>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-6">
                <%= form.label :price, "Precio de Operación", class: "form-label required" %>
                <div class="input-group">
                  <span class="input-group-text">$</span>
                  <%= form.number_field :price, 
                                       class: "form-control", 
                                       step: 0.01, 
                                       min: 0,
                                       required: true %>
                </div>
              </div>
              <div class="col-md-6">
                <%= form.label :commission_percentage, "Comisión (%)", class: "form-label" %>
                <div class="input-group">
                  <%= form.number_field :commission_percentage, 
                                       class: "form-control", 
                                       step: 0.01, 
                                       min: 0, 
                                       max: 100 %>
                  <span class="input-group-text">%</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Botones de acción -->
        <div class="d-flex justify-content-between mb-4">
          <%= link_to "Cancelar", business_transactions_path, 
                     class: "btn btn-secondary btn-lg" %>
          
          <%= form.submit "Crear Transacción", 
                         class: "btn btn-primary btn-lg px-5" %>
        </div>
      <% end %>


      <!-- MODAL: Crear Nueva Propiedad -->
      <div class="modal fade" id="newPropertyModal" tabindex="-1" aria-labelledby="newPropertyLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="newPropertyLabel">
                <i class="bi bi-house-add"></i> Crear Nueva Propiedad
              </h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
              <%= form_with model: Property.new, local: true, id: 'newPropertyForm' do |f| %>
                <div class="mb-3">
                  <%= f.label :title, "Título", class: "form-label" %>
                  <%= f.text_field :title, class: "form-control", placeholder: "Ej: Casa moderna" %>
                </div>

                <div class="mb-3">
                  <%= f.label :property_type_id, "Tipo de Propiedad", class: "form-label" %>
                  <%= f.collection_select :property_type_id, PropertyType.active.order(:sort_order), :id, :display_name,
                      { prompt: 'Selecciona tipo' }, { class: "form-select" } %>
                </div>

                <div class="mb-3">
                  <%= f.label :description, "Descripción", class: "form-label" %>
                  <%= f.text_area :description, class: "form-control", rows: 3 %>
                </div>

                <div class="row">
                  <div class="col-md-6">
                    <%= f.label :price, "Precio", class: "form-label" %>
                    <div class="input-group">
                      <span class="input-group-text">$</span>
                      <%= f.number_field :price, class: "form-control", step: 0.01, min: 0 %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :built_area_m2, "Área Construida (m²)", class: "form-label" %>
                    <%= f.number_field :built_area_m2, class: "form-control", step: 0.01, min: 0 %>
                  </div>
                </div>

                <div class="row mt-3">
                  <div class="col-md-6">
                    <%= f.label :lot_area_m2, "Área Terreno (m²)", class: "form-label" %>
                    <%= f.number_field :lot_area_m2, class: "form-control", step: 0.01, min: 0 %>
                  </div>
                  <div class="col-md-3">
                    <%= f.label :bedrooms, "Recámaras", class: "form-label" %>
                    <%= f.number_field :bedrooms, class: "form-control", min: 0 %>
                  </div>
                  <div class="col-md-3">
                    <%= f.label :bathrooms, "Baños", class: "form-label" %>
                    <%= f.number_field :bathrooms, class: "form-control", min: 0 %>
                  </div>
                </div>

                <hr>

                <div class="row">
                  <div class="col-md-4">
                    <%= f.label :street, "Calle", class: "form-label" %>
                    <%= f.text_field :street, class: "form-control" %>
                  </div>
                  <div class="col-md-2">
                    <%= f.label :exterior_number, "No. Ext", class: "form-label" %>
                    <%= f.text_field :exterior_number, class: "form-control" %>
                  </div>
                  <div class="col-md-2">
                    <%= f.label :interior_number, "No. Int", class: "form-label" %>
                    <%= f.text_field :interior_number, class: "form-control" %>
                  </div>
                  <div class="col-md-4">
                    <%= f.label :postal_code, "CP", class: "form-label" %>
                    <%= f.text_field :postal_code, class: "form-control" %>
                  </div>
                </div>

                <div class="row mt-3">
                  <div class="col-md-4">
                    <%= f.label :neighborhood, "Colonia", class: "form-label" %>
                    <%= f.text_field :neighborhood, class: "form-control" %>
                  </div>
                  <div class="col-md-4">
                    <%= f.label :municipality, "Municipio", class: "form-label" %>
                    <%= f.text_field :municipality, class: "form-control" %>
                  </div>
                  <div class="col-md-4">
                    <%= f.label :state, "Estado", class: "form-label" %>
                    <%= f.text_field :state, class: "form-control" %>
                  </div>
                </div>

                <div class="row mt-3">
                  <div class="col-md-6">
                    <%= f.label :city, "Ciudad", class: "form-label" %>
                    <%= f.text_field :city, class: "form-control" %>
                  </div>
                  <div class="col-md-6">
                    <%= f.label :country, "País", class: "form-label" %>
                    <%= f.text_field :country, class: "form-control" %>
                  </div>
                </div>

                <div class="alert alert-info mt-4">
                  <small>
                    <i class="bi bi-info-circle"></i>
                    Se asignará automáticamente a ti como propietario/agente responsable.
                  </small>
                </div>
              <% end %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              <button type="button" class="btn btn-primary" id="savePropertyBtn">
                <i class="bi bi-check"></i> Crear Propiedad
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- ============================================ -->
      <!-- MODAL: Crear Nuevo Cliente -->
      <!-- ============================================ -->
      <div class="modal fade" id="newClientModal" tabindex="-1" aria-labelledby="newClientLabel" aria-hidden="true">
        <div class="modal-dialog modal-md">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="newClientLabel">
                <i class="bi bi-person-plus"></i> Crear Nuevo Cliente
              </h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <%= form_with model: Client.new, local: true, id: 'newClientForm' do |f| %>
                <!-- Nombre Completo -->
                <div class="mb-3">
                  <%= f.label :name, "Nombre Completo", class: "form-label" %>
                  <%= f.text_field :name, class: "form-control", placeholder: "Juan Pérez García", required: true %>
                  <small class="text-muted">Nombre completo del cliente</small>
                </div>

                <!-- Email -->
                <div class="mb-3">
                  <%= f.label :email, "Email", class: "form-label" %>
                  <%= f.email_field :email, class: "form-control", placeholder: "cliente@email.com", required: true %>
                  <small class="text-muted">Email único del cliente</small>
                </div>

                <!-- Teléfono -->
                <div class="mb-3">
                  <%= f.label :phone, "Teléfono", class: "form-label" %>
                  <%= f.telephone_field :phone, class: "form-control", placeholder: "+52 5512345678" %>
                  <small class="text-muted">Teléfono de contacto</small>
                </div>

                <!-- Domicilio -->
                <div class="mb-3">
                  <%= f.label :address, "Domicilio", class: "form-label" %>
                  <%= f.text_field :address, class: "form-control", placeholder: "Calle Principal 123, Apartamento 4B" %>
                  <small class="text-muted">Domicilio del cliente</small>
                </div>

                <!-- Estado Activo -->
                <div class="mb-3">
                  <div class="form-check">
                    <%= f.check_box :active, { checked: true, class: "form-check-input" } %>
                    <%= f.label :active, "Cliente Activo", class: "form-check-label" %>
                  </div>
                  <small class="text-muted">Marca si el cliente está activo en el sistema</small>
                </div>

                <div class="alert alert-info alert-dismissible fade show">
                  <i class="bi bi-info-circle me-2"></i>
                  <small>El cliente se creará como entidad externa. Podrá acceder al sistema si se le asigna un usuario posteriormente.</small>
                </div>
              <% end %>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              <button type="button" class="btn btn-primary" id="saveClientBtn">
                <i class="bi bi-check me-2"></i>Crear Cliente
              </button>
            </div>
          </div>
        </div>
      </div>



<!-- ============================================ -->
<!-- JAVASCRIPT: Manejo de Modales COMPLETO -->
<!-- ============================================ -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  console.log('✅ Script de modales cargado');
  
  // ========== VALIDAR CAMPOS REQUIRED OCULTOS ==========
  const existingRadio = document.getElementById('existing_property');
  const newRadio = document.getElementById('new_property');
  const newPropertySection = document.getElementById('new-property-section');
  const requiredFields = newPropertySection.querySelectorAll('[required]');

  function updateRequiredFields() {
    requiredFields.forEach(field => {
      if (newPropertySection.style.display === 'none') {
        field.removeAttribute('required');
      } else {
        field.setAttribute('required', 'required');
      }
    });
  }

  existingRadio.addEventListener('change', updateRequiredFields);
  newRadio.addEventListener('change', updateRequiredFields);
  updateRequiredFields(); // Inicial

  // ========== GUARDAR NUEVA PROPIEDAD ==========
  const savePropertyBtn = document.getElementById('savePropertyBtn');
  if (savePropertyBtn) {
    savePropertyBtn.addEventListener('click', function(e) {
      e.preventDefault();
      
      const form = document.getElementById('newPropertyForm');
      if (!form) {
        console.error('❌ Form newPropertyForm no encontrado');
        return;
      }
      
      const formData = new FormData(form);
      console.log('📤 Enviando propiedad...');
      
      fetch('<%= properties_path %>', {
        method: 'POST',
        headers: {
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
          'Accept': 'application/json'
        },
        body: formData
      })
      .then(response => {
        console.log('📥 Response status:', response.status);
        return response.json();
      })
      .then(data => {
        console.log('✅ Data recibida:', data);
        
        if (data.id) {
          // Agregar a select de propiedad
          const select = document.querySelector('select[name="business_transaction[property_id]"]');
          if (select) {
            const option = new Option(data.title || data.address, data.id, true, true);
            select.add(option);
            select.value = data.id;
            console.log('✅ Propiedad agregada al select');
          }
          
          // Cerrar modal
          try {
            const modalElement = document.getElementById('newPropertyModal');
            const modal = bootstrap.Modal.getInstance(modalElement);
            if (modal) modal.hide();
            console.log('✅ Modal cerrado');
          } catch (e) {
            console.warn('⚠️ Error cerrando modal:', e);
          }
          
          // Limpiar form
          form.reset();
          
          // Mensaje de éxito
          alert('✅ Propiedad creada exitosamente');
        } else {
          const errorMsg = data.errors ? data.errors.join(', ') : 'Error desconocido';
          console.error('❌ Error:', errorMsg);
          alert('❌ Error al crear propiedad: ' + errorMsg);
        }
      })
      .catch(error => {
        console.error('❌ Error de red:', error);
        alert('❌ Error de conexión al crear propiedad');
      });
    });
  } else {
    console.warn('⚠️ Botón savePropertyBtn no encontrado');
  }

  // ========== GUARDAR NUEVO CLIENTE ==========
  const saveClientBtn = document.getElementById('saveClientBtn');
  if (saveClientBtn) {
    saveClientBtn.addEventListener('click', function(e) {
      e.preventDefault();
      
      const form = document.getElementById('newClientForm');
      if (!form) {
        console.error('❌ Form newClientForm no encontrado');
        return;
      }
      
      const formData = new FormData(form);
      console.log('📤 Enviando cliente...');
      
      fetch('<%= clients_path %>', {
        method: 'POST',
        headers: {
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
          'Accept': 'application/json'
        },
        body: formData
      })
      .then(response => {
        console.log('📥 Response status:', response.status);
        return response.json();
      })
      .then(data => {
        console.log('✅ Data recibida:', data);
        
        if (data.id) {
          // Obtener ambos selects de cliente
          const offeringSelect = document.querySelector('select[name="business_transaction[offering_client_id]"]');
          const acquiringSelect = document.querySelector('select[name="business_transaction[acquiring_client_id]"]');
          
          // Agregar a Ofertante
          if (offeringSelect) {
            const option1 = new Option(data.display_name || data.name, data.id, true, true);
            offeringSelect.add(option1);
            offeringSelect.value = data.id;
            console.log('✅ Cliente agregado a Ofertante');
          }
          
          // Agregar a Adquiriente
          if (acquiringSelect) {
            const option2 = new Option(data.display_name || data.name, data.id);
            acquiringSelect.add(option2);
            console.log('✅ Cliente agregado a Adquiriente');
          }

          // Agregar a TODOS los selects de copropietarios
          const coOwnerSelects = document.querySelectorAll('select[name*="[co_owners_attributes]"][name*="[client_id]"]');
          coOwnerSelects.forEach((select, index) => {
            const option = new Option(data.display_name || data.name, data.id);
            select.add(option);
            console.log(`✅ Cliente agregado a co-propietario ${index + 1}`);
          });
          
          // Cerrar modal
          try {
            const modalElement = document.getElementById('newClientModal');
            const modal = bootstrap.Modal.getInstance(modalElement);
            if (modal) modal.hide();
            console.log('✅ Modal cerrado');
          } catch (e) {
            console.warn('⚠️ Error cerrando modal:', e);
          }
          
          // Limpiar form
          form.reset();
          
          // Mensaje de éxito
          alert('✅ Cliente creado exitosamente');
        } else {
          const errorMsg = data.errors ? data.errors.join(', ') : 'Error desconocido';
          console.error('❌ Error:', errorMsg);
          alert('❌ Error al crear cliente: ' + errorMsg);
        }
      })
      .catch(error => {
        console.error('❌ Error de red:', error);
        alert('❌ Error de conexión al crear cliente');
      });
    });
  } else {
    console.warn('⚠️ Botón saveClientBtn no encontrado');
  }
});
