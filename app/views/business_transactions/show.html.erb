<!-- app/views/business_transactions/show.html.erb -->
<div class="container-fluid mt-4">
  <div class="row">
    <div class="col-12">
      <!-- Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
          <h2 class="mb-1">
            <i class="bi bi-briefcase-fill"></i>
            Transacción #<%= @transaction.id %>
          </h2>
          <p class="text-muted mb-0">
            <%= @transaction.operation_type&.display_name %> • 
            <span class="badge bg-<%= @transaction.business_status&.name == 'available' ? 'success' : 'warning' %>">
              <%= @transaction.business_status&.display_name %>
            </span>
          </p>
        </div>
        <div>
          <%= link_to "Editar", edit_business_transaction_path(@transaction), class: "btn btn-primary me-2" %>
          <%= link_to "Volver", business_transactions_path, class: "btn btn-secondary" %>
        </div>
      </div>

      <!-- SECCIÓN 1: INFORMACIÓN BÁSICA -->
      <div class="card mb-4">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Información Básica</h5>
        </div>
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-4">Tipo de Operación:</dt>
            <dd class="col-sm-8"><strong><%= @transaction.operation_type&.display_name %></strong></dd>

            <dt class="col-sm-4">Estado:</dt>
            <dd class="col-sm-8">
              <span class="badge bg-<%= @transaction.business_status&.name == 'available' ? 'success' : 'warning' %>">
                <%= @transaction.business_status&.display_name %>
              </span>
            </dd>

            <dt class="col-sm-4">Fecha Inicio:</dt>
            <dd class="col-sm-8"><%= @transaction.start_date&.strftime('%d/%m/%Y') %></dd>

            <dt class="col-sm-4">Precio:</dt>
            <dd class="col-sm-8">
              <strong class="text-success">
                $<%= number_with_delimiter(@transaction.price, delimiter: ',') %>
              </strong>
            </dd>

            <dt class="col-sm-4">Comisión:</dt>
            <dd class="col-sm-8"><%= @transaction.commission_percentage %>%</dd>
          </dl>
        </div>
      </div>

      <!-- SECCIÓN 2: PROPIEDAD -->
      <div class="card mb-4">
        <div class="card-header bg-success text-white">
          <h5 class="mb-0"><i class="fas fa-home me-2"></i>Propiedad</h5>
        </div>
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-4">Dirección:</dt>
            <dd class="col-sm-8">
              <strong><%= @transaction.property&.address %></strong>
            </dd>

            <dt class="col-sm-4">Tipo:</dt>
            <dd class="col-sm-8"><%= @transaction.property&.property_type&.display_name %></dd>

          </dl>
        </div>
      </div>

      <!-- SECCIÓN 3: CLIENTES -->
      <div class="card mb-4">
        <div class="card-header bg-secondary text-white">
          <h5 class="mb-0"><i class="fas fa-users me-2"></i>Clientes</h5>
        </div>
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-4">Cliente Ofertante:</dt>
            <dd class="col-sm-8">
              <strong><%= @transaction.offering_client&.display_name %></strong>
              <br>
              <small class="text-muted">
                <%= @transaction.offering_client&.email %>
              </small>
            </dd>

            <% if @transaction.acquiring_client.present? %>
              <dt class="col-sm-4">Cliente Adquiriente:</dt>
              <dd class="col-sm-8">
                <strong><%= @transaction.acquiring_client&.display_name %></strong>
                <br>
                <small class="text-muted">
                  <%= @transaction.acquiring_client&.email %>
                </small>
              </dd>
            <% end %>
          </dl>
        </div>
      </div>


      <!-- SECCIÓN 4: COPROPIETARIOS -->
      <% if @transaction.business_transaction_co_owners.any? %>
        <div class="card mb-4">
          <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="fas fa-users me-2"></i>Propietarios/Copropietarios</h5>
          </div>
          <div class="card-body">
            
            <!-- ✅ AGREGAR: Advertencia de porcentaje -->
            <% total_percentage = @transaction.business_transaction_co_owners.sum(:percentage) %>
            
            <% if total_percentage < 100 %>
              <div class="alert alert-info d-flex align-items-center mb-3" role="alert">
                <i class="bi bi-info-circle-fill me-2"></i>
                <div>
                  <strong>Venta parcial:</strong> Esta transacción representa el <strong><%= total_percentage.round(2) %>%</strong> de la propiedad.
                  El <%= (100 - total_percentage).round(2) %>% restante no está incluido en esta operación.
                </div>
              </div>
            <% elsif total_percentage > 100 %>
              <div class="alert alert-warning d-flex align-items-center mb-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <div>
                  <strong>Revisar porcentajes:</strong> La suma total es <strong><%= total_percentage.round(2) %>%</strong>.
                  Verifica que los datos sean correctos.
                </div>
              </div>
            <% end %>

            <!-- TU TABLA ORIGINAL (con pequeñas mejoras) -->
            <div class="table-responsive">
              <table class="table table-sm table-hover">
                <thead class="table-light">
                  <tr>
                    <th>Nombre</th>
                    <th class="text-center">Porcentaje</th>
                    <th class="text-center">Rol</th>
                    <th class="text-center">Tipo</th>
                    <th class="text-center">Estado</th>
                  </tr>
                </thead>
                <tbody>
                  <% @transaction.business_transaction_co_owners.order(:id).each do |co_owner| %>
                    <tr>
                      <td>
                        <!-- ✅ MEJORAR: Agregar estrella al principal -->
                        <% if co_owner.primary? %>
                          <i class="bi bi-star-fill text-warning me-1" title="Copropietario principal"></i>
                        <% end %>
                        <strong><%= co_owner.display_name %></strong>
                      </td>
                      <td class="text-center">
                        <span class="badge bg-info"><%= number_to_percentage(co_owner.percentage, precision: 2) %></span>
                      </td>
                      <td class="text-center">
                        <span class="badge bg-secondary"><%= co_owner.role&.humanize %></span>
                      </td>
                      <td class="text-center">
                        <!-- ✅ MEJORAR: Cambiar "Secundario" por "Adicional" -->
                        <% if co_owner.primary? %>
                          <span class="badge bg-success">
                            <i class="bi bi-star me-1"></i>Principal
                          </span>
                        <% else %>
                          <span class="badge bg-secondary">Adicional</span>
                        <% end %>
                      </td>
                      <td class="text-center">
                        <!-- ✅ AGREGAR: Estado del copropietario -->
                        <% if co_owner.deceased %>
                          <span class="badge bg-dark">
                            <i class="bi bi-x-circle me-1"></i>Fallecido
                          </span>
                        <% else %>
                          <span class="badge bg-success">
                            <i class="bi bi-check-circle me-1"></i>Activo
                          </span>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
                
                <!-- ✅ MEJORAR: Footer con colores condicionales -->
                <tfoot class="table-light">
                  <tr class="fw-bold">
                    <td class="text-end">Total en esta transacción:</td>
                    <td class="text-center">
                      <% if total_percentage == 100 %>
                        <span class="badge bg-success fs-6">
                          <%= number_to_percentage(total_percentage, precision: 2) %>
                        </span>
                      <% elsif total_percentage < 100 %>
                        <span class="badge bg-info fs-6">
                          <%= number_to_percentage(total_percentage, precision: 2) %>
                        </span>
                      <% else %>
                        <span class="badge bg-warning text-dark fs-6">
                          <%= number_to_percentage(total_percentage, precision: 2) %>
                        </span>
                      <% end %>
                    </td>
                    <td colspan="3"></td>
                  </tr>
                </tfoot>
              </table>
            </div>

            <!-- ✅ OPCIONAL: Información adicional del tipo de copropiedad -->
            <% if @transaction.co_ownership_type.present? %>
              <div class="mt-3 p-2 bg-light rounded">
                <small class="text-muted">
                  <i class="bi bi-info-circle me-1"></i>
                  <strong>Tipo de copropiedad:</strong> 
                  <%= @transaction.co_ownership_type.display_name %>
                </small>
              </div>
            <% end %>

          </div>
        </div>
      <% end %>


      <!-- SECCIÓN 5: AGENTES -->
      <div class="card mb-4">
        <div class="card-header bg-info text-white">
          <h5 class="mb-0"><i class="fas fa-user-tie me-2"></i>Agentes</h5>
        </div>
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-4">Agente Listador:</dt>
            <dd class="col-sm-8">
              <strong><%= @transaction.listing_agent&.email %></strong>
            </dd>

            <dt class="col-sm-4">Agente Actual:</dt>
            <dd class="col-sm-8">
              <strong><%= @transaction.current_agent&.email %></strong>
            </dd>

            <% if @transaction.selling_agent.present? %>
              <dt class="col-sm-4">Agente Vendedor:</dt>
              <dd class="col-sm-8">
                <strong><%= @transaction.selling_agent&.email %></strong>
              </dd>
            <% end %>
          </dl>
        </div>
      </div>

      <!-- SECCIÓN 6: ACCIONES -->
      <div class="card mb-4">
        <div class="card-header bg-dark text-white">
          <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Acciones</h5>
        </div>
        <div class="card-body">
          <div class="d-flex flex-wrap gap-2">
            
            <!-- Editar -->
            <% if policy(@transaction).edit? %>
              <%= link_to edit_business_transaction_path(@transaction), 
                          class: "btn btn-primary" do %>
                <i class="bi bi-pencil-square"></i> Editar
              <% end %>
            <% end %>
            
            <!-- Ver Documentos -->
            <%= link_to business_transaction_document_submissions_path(@transaction), 
                        class: "btn btn-info" do %>
              <i class="bi bi-file-earmark-text"></i> Documentos
            <% end %>
            
            <!-- Exportar Documentos -->
            <% if policy(@transaction).export_documents? %>
              <%= button_to export_documents_business_transaction_path(@transaction), 
                            method: :post,
                            class: "btn btn-success",
                            form: { data: { turbo: false } },
                            data: { 
                              turbo_confirm: "¿Exportar todos los documentos de esta transacción?" 
                            } do %>
                <i class="bi bi-download"></i> Exportar Documentos
              <% end %>
            <% end %>
            
            <!-- Transferir Agente (solo admin) -->
            <% if policy(@transaction).transfer_agent? %>
              <%= link_to transfer_agent_business_transaction_path(@transaction), 
                          class: "btn btn-warning",
                          data: { turbo: false } do %>
                <i class="bi bi-arrow-left-right"></i> Transferir Agente
              <% end %>
            <% end %>
            
            <!-- Eliminar -->
            <% if policy(@transaction).destroy? %>
              <%= button_to business_transaction_path(@transaction), 
                            method: :delete,
                            class: "btn btn-danger",
                            form: { data: { turbo: false } },
                            data: { 
                              turbo_confirm: "¿Estás seguro de eliminar esta transacción? Esta acción no se puede deshacer." 
                            } do %>
                <i class="bi bi-trash"></i> Eliminar
              <% end %>
            <% end %>
            
            <!-- Volver -->
            <%= link_to business_transactions_path, 
                        class: "btn btn-secondary" do %>
              <i class="bi bi-arrow-left"></i> Volver
            <% end %>
            
          </div>
          
          <!-- DEBUG: Info de agentes (remover en producción) -->
          <% if Rails.env.development? %>
            <div class="mt-3 p-2 bg-light border rounded">
              <small class="text-muted">
                <strong>Debug:</strong> 
                Agente asignado: <%= @transaction.assigned_agent_name %> |
                Puede exportar: <%= policy(@transaction).export_documents? ? '✅' : '❌' %>
              </small>
            </div>
          <% end %>
        </div>
      </div>


    </div>
  </div>
</div>
