<div class="d-flex justify-content-between align-items-center mb-4">
  <h2 class="mb-0">
    <i class="bi bi-briefcase"></i>
    Transacciones de Negocio
  </h2>

  <% if policy(BusinessTransaction).new? %>
    <%= link_to new_business_transaction_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-circle"></i>
      Nueva Transacción
    <% end %>
  <% end %>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">
          Lista de Transacciones
          <span class="badge bg-secondary ms-2"><%= @transactions.count %></span>
        </h5>
      </div>
      <div class="card-body">
        <% if @transactions.any? %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Propiedad</th>
                  <th>Tipo</th>
                  <th>Estado</th>
                  <th>Cliente Ofertante</th>
                  <th>Precio</th>
                  <th>Creado por</th>
                  <th>Agente</th>
                  <th>Fecha</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% @transactions.each do |transaction| %>
                  <tr>
                    <td>
                      <strong><%= transaction.property.title %></strong><br>
                      <small class="text-muted"><%= transaction.property.address %></small>
                    </td>
                    <td>
                      <span class="badge bg-info">
                        <%= transaction.operation_type.display_name %>
                      </span>
                    </td>
                    <td>
                      <span class="badge bg-<%= transaction.business_status.color %>">
                        <%= transaction.business_status.display_name %>
                      </span>
                    </td>
                    <td><%= transaction.offering_client.name %></td>
                    <td>
                      <strong>$<%= number_with_delimiter(transaction.price) %></strong>
                    </td>
                    <td>
                      <small>
                        <%= transaction.listing_agent.email %><br>
                        <span class="badge bg-secondary">
                          <%= transaction.listing_agent.role.display_name %>
                        </span>
                      </small>
                    </td>
                    <td>
                      <small>
                        <%= transaction.current_agent.email %><br>
                        <span class="text-muted">Actual</span>
                      </small>
                    </td>
                    <td>
                      <%= transaction.start_date.strftime("%d/%m/%Y") %>
                    </td>
                    <td>
                      <div class="btn-group btn-group-sm" role="group">
                        <% if policy(transaction).show? %>
                          <%= link_to transaction, class: "btn btn-outline-primary btn-sm" do %>
                            <i class="bi bi-eye"></i>
                          <% end %>
                        <% end %>
                        
                        <% if policy(transaction).edit? %>
                          <%= link_to edit_business_transaction_path(transaction), class: "btn btn-outline-secondary btn-sm" do %>
                            <i class="bi bi-pencil"></i>
                          <% end %>
                        <% end %>
                        
                        <% if policy(transaction).destroy? %>
                          <%= link_to transaction, method: :delete, 
                              data: { confirm: '¿Estás seguro?' }, 
                              class: "btn btn-outline-danger btn-sm" do %>
                            <i class="bi bi-trash"></i>
                          <% end %>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-5">
            <i class="bi bi-briefcase display-1 text-muted"></i>
            <h4 class="mt-3">No hay transacciones</h4>
            <p class="text-muted">
              <% if policy(BusinessTransaction).new? %>
                Crea tu primera transacción de negocio.
              <% else %>
                No tienes transacciones asignadas.
              <% end %>
            </p>
            <% if policy(BusinessTransaction).new? %>
              <%= link_to new_business_transaction_path, class: "btn btn-primary" do %>
                <i class="bi bi-plus-circle"></i>
                Nueva Transacción
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
