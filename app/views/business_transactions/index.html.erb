<div class="d-flex justify-content-between align-items-center mb-4">
  <h2>
    <i class="bi bi-briefcase-fill"></i>
    Transacciones de Negocio
  </h2>
  <% if can_create_transactions? %>
    <%= link_to new_business_transaction_path, class: "btn btn-primary" do %>
      <i class="bi bi-plus-circle"></i>
      Nueva Transacción
    <% end %>
  <% end %>
</div>

<div class="row mb-3">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
        <div class="row text-center">
          <div class="col-md-3">
            <h5 class="text-success"><%= @transactions.active.count %></h5>
            <small class="text-muted">Activas</small>
          </div>
          <div class="col-md-3">
            <h5 class="text-warning"><%= @transactions.joins(:business_status).where(business_statuses: { name: 'reserved' }).count %></h5>
            <small class="text-muted">Reservadas</small>
          </div>
          <div class="col-md-3">
            <h5 class="text-info"><%= @transactions.completed.count %></h5>
            <small class="text-muted">Cerradas</small>
          </div>
          <div class="col-md-3">
            <h5 class="text-primary"><%= @transactions.sum(:price) %></h5>
            <small class="text-muted">Valor Total</small>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="card shadow">
  <div class="card-header bg-primary text-white">
    <h5 class="mb-0">
      <i class="bi bi-list"></i>
      Mis Transacciones
    </h5>
  </div>
  
  <div class="table-responsive">
    <table class="table table-hover mb-0">
      <thead class="table-dark">
        <tr>
          <th>Propiedad</th>
          <th>Cliente</th>
          <th>Operación</th>
          <th>Estado</th>
          <th>Precio</th>
          <th>Fecha Inicio</th>
          <th class="text-center">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% if @transactions.any? %>
          <% @transactions.includes(:property, :offering_client, :operation_type, :business_status).each do |transaction| %>
            <tr>
              <td>
                <%= link_to business_transaction_path(transaction), class: "text-decoration-none" do %>
                  <strong><%= transaction.property.title %></strong><br>
                  <small class="text-muted"><%= transaction.property.address %></small>
                <% end %>
              </td>
              <td>
                <strong><%= transaction.offering_client.name %></strong><br>
                <small class="text-muted"><%= transaction.offering_client.email %></small>
              </td>
              <td>
                <span class="badge bg-info">
                  <%= transaction.operation_type.display_name %>
                </span>
              </td>
              <td>
                <span class="badge bg-<%= transaction.business_status.color %>">
                  <%= transaction.business_status.display_name %>
                </span>
              </td>
              <td>
                <strong class="text-success">
                  $<%= number_with_delimiter(transaction.price) %>
                </strong>
              </td>
              <td>
                <%= transaction.start_date.strftime('%d/%m/%Y') %>
              </td>
              <td class="text-center">
                <div class="btn-group" role="group">
                  <%= link_to business_transaction_path(transaction), 
                      class: "btn btn-sm btn-outline-info" do %>
                    <i class="bi bi-eye"></i>
                  <% end %>
                  
                  <% if policy(transaction).edit? %>
                    <%= link_to edit_business_transaction_path(transaction), 
                        class: "btn btn-sm btn-outline-primary" do %>
                      <i class="bi bi-pencil"></i>
                    <% end %>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="7" class="text-center py-5">
              <div class="text-muted">
                <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                <h5 class="mt-3">No hay transacciones</h5>
                <p>Comienza creando tu primera transacción de negocio.</p>
                <% if can_create_transactions? %>
                  <%= link_to "Crear Primera Transacción", new_business_transaction_path, 
                      class: "btn btn-primary" %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <% if @transactions.any? %>
    <div class="card-footer text-muted">
      <i class="bi bi-info-circle"></i>
      <strong><%= @transactions.count %></strong> transacción(es) total(es)
    </div>
  <% end %>
</div>
