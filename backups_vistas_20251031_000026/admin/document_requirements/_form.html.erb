<%= form_with(model: [:admin, @requirement], local: true) do |f| %>
    <% if @requirement.errors.any? %>
      <div class="alert alert-danger">
        <h5><%= pluralize(@requirement.errors.count, "error") %> impidieron guardar:</h5>
        <ul>
          <% @requirement.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  
    <div class="mb-3">
      <%= f.label :document_type_id, 'Documento', class: 'form-label' %>
      <%= f.collection_select :document_type_id,
                              DocumentType.all,
                              :id, :name,
                              prompt: 'Selecciona documento',
                              class: 'form-select' %>
    </div>
  
    <div class="row">
      <div class="col-md-3 mb-3">
        <%= f.label :property_type, 'Tipo Propiedad', class: 'form-label' %>
        <%= f.text_field :property_type, class: 'form-control' %>
      </div>
      <div class="col-md-3 mb-3">
        <%= f.label :transaction_type, 'Tipo Transacción', class: 'form-label' %>
        <%= f.text_field :transaction_type, class: 'form-control' %>
      </div>
      <div class="col-md-3 mb-3">
        <%= f.label :client_type, 'Tipo Cliente', class: 'form-label' %>
        <%= f.text_field :client_type, class: 'form-control' %>
      </div>
      <div class="col-md-3 mb-3">
        <%= f.label :person_type, 'Tipo Persona', class: 'form-label' %>
        <%= f.text_field :person_type, class: 'form-control' %>
      </div>
    </div>
  
    <div class="row mb-3">
      <div class="col-md-4">
        <%= f.label :valid_from, 'Válido desde', class: 'form-label' %>
        <%= f.date_field :valid_from, class: 'form-control' %>
      </div>
      <div class="col-md-4">
        <%= f.label :valid_until, 'Válido hasta', class: 'form-label' %>
        <%= f.date_field :valid_until, class: 'form-control' %>
      </div>
      <div class="col-md-4 d-flex align-items-center">
        <div class="form-check">
          <%= f.check_box :is_required, class: 'form-check-input' %>
          <%= f.label :is_required, 'Requerido', class: 'form-check-label' %>
        </div>
      </div>
    </div>
  
    <div class="mb-3">
      <%= f.label :applies_to, 'Aplica a', class: 'form-label' %>
      <%= f.text_field :applies_to, class: 'form-control' %>
      <small class="form-text text-muted">
        Ejemplo: “Venta Nacional”, “Arrendamiento”, etc.
      </small>
    </div>
  
    <div class="d-flex">
      <%= f.submit class: 'btn btn-success me-2' %>
      <%= link_to 'Cancelar', admin_document_requirements_path, class: 'btn btn-secondary' %>
    </div>
  <% end %>
  