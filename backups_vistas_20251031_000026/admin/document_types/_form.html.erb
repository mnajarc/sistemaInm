<%= form_with(model: [:admin, @document_type], local: true) do |f| %>
  <% if @document_type.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(@document_type.errors.count, "error") %> impidieron guardar:</h5>
      <ul>
        <% @document_type.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, 'Nombre', class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= f.label :description, 'Descripción', class: 'form-label' %>
    <%= f.text_area :description, rows: 3, class: 'form-control' %>
  </div>

  <div class="row">
    <div class="col-md-4 mb-3">
      <%= f.label :category, 'Categoría', class: 'form-label' %>
      <%= f.text_field :category, class: 'form-control' %>
    </div>
    <div class="col-md-4 mb-3">
      <%= f.label :valid_from, 'Vigente desde', class: 'form-label' %>
      <%= f.date_field :valid_from, class: 'form-control' %>
    </div>
    <div class="col-md-4 mb-3">
      <%= f.label :valid_until, 'Vigente hasta', class: 'form-label' %>
      <%= f.date_field :valid_until, class: 'form-control' %>
    </div>
  </div>

  <div class="row align-items-center mb-3">
    <div class="col-auto">
      <%= f.check_box :is_active, class: 'form-check-input' %>
      <%= f.label :is_active, 'Activo', class: 'form-check-label' %>
    </div>
    <div class="col-auto">
      <%= f.label :replacement_document_id, 'Reemplaza a', class: 'form-label' %>
      <%= f.collection_select :replacement_document_id,
                              DocumentType.all,
                              :id, :name,
                              include_blank: 'Ninguno',
                              class: 'form-select' %>
    </div>
  </div>

  <div class="d-flex">
    <%= f.submit class: 'btn btn-success me-2' %>
    <%= link_to 'Cancelar', admin_document_types_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
